<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LAYARXID" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="Theme.LAYARXID" parent="Base.Theme.LAYARXID" />

    <style name="BottomNavigation.Poppins" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.BottomNavigation.Active" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="chipStrokeColor">@android:color/white</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>