<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0F20"
    tools:context=".DetailLionKingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logo_share"
            android:contentDescription="Share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="150dp"
            android:layout_height="225dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_thelionking"
            android:contentDescription="Movie Poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="THE LION KING"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_poster"
            app:layout_constraintTop_toTopOf="@id/iv_poster" />

        <TextView
            android:id="@+id/tv_duration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Durasi"
            android:textColor="#9CA3AF"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text=": 118 Menit"
            android:textColor="@android:color/white"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_duration_label"
            app:layout_constraintStart_toEndOf="@id/tv_sutradara_label" />

        <TextView
            android:id="@+id/tv_sutradara_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Sutradara"
            android:textColor="#9CA3AF"
            app:layout_constraintStart_toStartOf="@id/tv_duration_label"
            app:layout_constraintTop_toBottomOf="@id/tv_duration_label" />

        <TextView
            android:id="@+id/tv_sutradara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text=": Jon Favreau"
            android:textColor="@android:color/white"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_sutradara_label"
            app:layout_constraintStart_toStartOf="@id/tv_duration" />

        <TextView
            android:id="@+id/tv_rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Rating"
            android:textColor="#9CA3AF"
            app:layout_constraintStart_toStartOf="@id/tv_sutradara_label"
            app:layout_constraintTop_toBottomOf="@id/tv_sutradara_label" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rating_background"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="SU"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_rating_label"
            app:layout_constraintStart_toStartOf="@id/tv_sutradara" />

        <TextView
            android:id="@+id/tv_genre_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Genre"
            android:textColor="#9CA3AF"
            app:layout_constraintStart_toStartOf="@id/tv_rating_label"
            app:layout_constraintTop_toBottomOf="@id/tv_rating_label" />

        <TextView
            android:id="@+id/tv_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text=": Animasi, Drama, Petualangan"
            android:textColor="@android:color/white"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_genre_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_rating" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_watchlist"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Watchlist"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_add_to_watchlist"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:cornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/iv_poster"
            app:strokeColor="#7700FF"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_tonton_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Tonton Trailer"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_watchlist" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_trailer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tonton_trailer">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_trailer_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Trailer Thumbnail" />

                <ImageView
                    android:id="@+id/iv_play_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_circle"
                    android:contentDescription="Play Button"
                    app:tint="@android:color/white" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_sinopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Sinopsis"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_trailer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Simba, seorang pangeran singa muda, melarikan diri dari kerajaannya setelah ayahnya, Raja Mufasa, dibunuh oleh pamannya yang licik, Scar. Bertahun-tahun kemudian, Simba harus menghadapi masa lalunya dan mengklaim tempatnya yang sah sebagai raja."
            android:textColor="#9CA3AF"
            app:layout_constraintTop_toBottomOf="@id/tv_sinopsis" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

