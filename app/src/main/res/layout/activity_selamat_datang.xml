<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_selamat_datang"
    tools:context=".SelamatDatang">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/rectagle_selamat_datang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_pesan_selamat_datang"
        android:layout_width="385dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/font_pesan_selamat_datang"
        app:layout_constraintEnd_toEndOf="@+id/iv_selamat_datang"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/iv_selamat_datang"
        app:layout_constraintTop_toBottomOf="@+id/iv_selamat_datang" />

    <ImageView
        android:id="@+id/iv_selamat_datang"
        android:layout_width="410dp"
        android:layout_height="39dp"
        android:src="@drawable/font_selamat_datang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.471" />

    <!-- Latar belakang untuk tombol Daftar -->

    <!-- Teks 'Daftar' di atas latar belakangnya -->

    <ImageView
        android:id="@+id/iv_bg_daftar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/rectagle1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_font_daftar"
        android:layout_width="78dp"
        android:layout_height="16dp"
        android:src="@drawable/font_daftar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_daftar"
        app:layout_constraintEnd_toEndOf="@+id/iv_bg_daftar"
        app:layout_constraintStart_toStartOf="@+id/iv_bg_daftar"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_daftar" />

    <!-- Teks 'Masuk' -->
    <ImageView
        android:id="@+id/iv_masuk"
        android:layout_width="78dp"
        android:layout_height="16dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/masuk"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bg_daftar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bg_daftar" />

</androidx.constraintlayout.widget.ConstraintLayout>
