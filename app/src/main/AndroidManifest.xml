<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for camera and gallery -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LAYARXID">
        <activity
            android:name="com.pab.tixid.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pab.tixid.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.pab.tixid.BioskopActivity"
            android:exported="false" />
        <activity
            android:name="com.pab.tixid.ProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.pab.tixid.SedangTayangActivity"
            android:exported="false" />
        <activity
            android:name="com.pab.tixid.SegeraHadirActivity"
            android:exported="false" />
        <activity
            android:name="com.pab.tixid.Membuat_Akun"
            android:exported="false" />
        <activity
            android:name="com.pab.tixid.SelamatDatang"
            android:exported="false" />
        <activity
            android:name="com.pab.tixid.MasukActivity"
            android:exported="false" />
        <activity
            android:name=".DetailMulanActivity"
            android:exported="false" />
        <activity
            android:name=".DetailPotterActivity"
            android:exported="false" />
        <activity
            android:name=".DetailStarWarsActivity"
            android:exported="false" />
        <activity
            android:name=".DetailLionKingActivity"
            android:exported="false" />
        <activity
            android:name=".DetailZootopiaActivity"
            android:exported="false" />
        <activity
            android:name=".DetailLastOfUsActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>